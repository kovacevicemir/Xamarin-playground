<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactBook.GridShowcasePage" Title="Grid layout">
    <Grid BackgroundColor="Black" RowSpacing="20" ColumnSpacing="20">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Text="label 1" BackgroundColor="Sienna"/>
        <Label Grid.Row="0" Grid.Column="1" Text="label 2" BackgroundColor="Yellow"/>
        <Label Grid.Row="1" Grid.Column="0" Text="label 3" BackgroundColor="CadetBlue"/>
        <Label Grid.Row="1" Grid.Column="1" Text="label 4" BackgroundColor="WhiteSmoke"/>
        <Label Grid.Row="2" Grid.ColumnSpan="2" Text="label 5" BackgroundColor="Green"/>
    </Grid>
</ContentPage>